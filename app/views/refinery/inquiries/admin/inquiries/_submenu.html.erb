<div class="item active">
  <div class="sub-actions">
    <%= active_link_to t('.inbox'), refinery.inquiries_admin_inquiries_path, :class => "item" %>
    <% if @spam_count > 0  %>
      <%= link_to "#{t('.spam')} (#{@spam_count})", refinery.spam_inquiries_admin_inquiries_path, :class => "spam_icon item" %>
    <% else %>
      <%= link_to t('.spam'), refinery.spam_inquiries_admin_inquiries_path, :class => "spam_empty_icon item" %>
    <% end %>

    <%= link_to t('.update_notified'),
                  refinery.edit_inquiries_admin_setting_path(:inquiry_notification_recipients, :dialog => true, :height => 300),
                  :class => "user_comment_icon item" %>
    <%= link_to t('.edit_confirmation_email'),
                refinery.edit_inquiries_admin_setting_path(:inquiry_confirmation_body, :dialog => true),
                :class => "edit_email_icon item" %>
  </div>
</div>